# switch on scintillation inside the TPC
/Xe/detector/setLXeScintillation false

# set properties of the point source
/Xe/gun/shape Shell
/Xe/gun/halfz 610 mm
/Xe/gun/innerHalfz 600 mm
/Xe/gun/innerRadius 600 mm
/Xe/gun/radius 610 mm
/Xe/gun/center 0 0 0 mm
/Xe/gun/angtype iso

/Xe/gun/energy 0 keV
/Xe/gun/particle ion

# for 137Cs
/Xe/gun/ion 55 137 0 0
